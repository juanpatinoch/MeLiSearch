<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeLiSearch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/yellow_2</item>
        <!--   a darker variant of the primary color, used for
            the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/yellow_1</item>
        <!-- status bar color -->
        <item name="android:statusBarColor">@color/yellow_1</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/yellow_2</item>
        <!-- TextColor default -->
        <item name="android:textColorPrimary">@color/gray_2</item>
        <!-- TextSize default -->
        <item name="android:textSize">@dimen/text_description_size</item>
        <!-- Background default -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Font family -->
        <item name="android:fontFamily">@font/inter</item>
        <!-- Disabled dark mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>