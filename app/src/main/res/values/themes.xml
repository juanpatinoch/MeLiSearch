<resources>
    <!-- Base application theme. -->
    <style name="Theme.MeLiSearch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/blue</item>
        <!--   a darker variant of the primary color, used for
            the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/gray</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/blue</item>
        <!-- TextColor default -->
        <item name="android:textColorPrimary">@color/gray</item>
        <!-- TextSize default -->
        <item name="android:textSize">@dimen/text_description_size</item>
        <!-- Background default -->
        <item name="android:windowBackground">@color/white</item>
        <!-- BottomSheet Style -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Font family -->
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/blue</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/gray</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textSize">@dimen/text_description_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>